	<shape type="rectangle">
		<transform name="toWorld">
			<scale x="0.3" y="0.3" z="0.3"/>
			<rotate z="1" angle="-5"/>
			<rotate x="1" angle="-15"/>
			<rotate y="1" angle="$y_angle"/>
			<translate y="0.04" x="0" z="0"/>
		</transform>

		<!-- <bsdf type="twosided" id="wood"> -->
			<!-- <bsdf type="dielectric"/> -->
			<bsdf type="normalmap">
				<texture type="bitmap">
					<string name="filename" value="$normal"/>
					<float name="uscale" value="1"/>
					<float name="vscale" value="-1"/>
					<float name="gamma" value="1"/>
				</texture>
				<bsdf type="roughplastic">
					<string name="distribution" value="ggx"/>
					<texture name="alpha" type="bitmap">
						<string name="filename" value="$rough"/>
						<float name="uscale" value="1"/>
						<float name="vscale" value="-1"/>
						<float name="gamma" value="2.2"/>
					</texture>
					<texture name="diffuseReflectance" type="scale">
						<float name="scale" value="$scaleDiffuse"/>
						<texture type="bitmap">
							<string name="filename" value="$albedo"/>
							<float name="uscale" value="1"/>
							<float name="vscale" value="-1"/>
							<float name="gamma" value="2.2"/>
						</texture>
					</texture>
					<texture name="specularReflectance" type="scale">
						<float name="scale" value="$scaleSpecular"/>
						<texture type="bitmap">
							<string name="filename" value="$specular"/>
							<float name="uscale" value="1"/>
							<float name="vscale" value="-1"/>
							<float name="gamma" value="2.2"/>
						</texture>
					</texture>
				</bsdf>
			</bsdf>
		<!-- </bsdf> -->
	</shape>

